<div class="container mt-3">
  <div class="row">
    <div class="col-md-6">
      <h2>Form Tambah Data Contact</h2>

      <% if (typeof errors != 'undefined') { %>
      <div class="alert alert-danger" role="alert">
        <ul>
          <% errors.forEach(error => { %>
          <li><%= error.msg %> </li>
          <% }) %>
        </ul>
      </div>
      <% } %>
      
      <form method="post" action="/contact">
        <div class="mb-3">
          <label for="nama" class="form-label">Nama</label>
          <input type="text" name="nama" class="form-control" id="nama" placeholder="Nama Kontak" required>
        </div>
        <div class="mb-3">
          <label for="email" class="form-label">Email</label>
          <input type="email" name="email" class="form-control" id="email" placeholder="Email Kontak" required>
        </div>
        <div class="mb-3">
          <label for="nohp" class="form-label">Nomor Hp</label>
          <input type="text" name="nohp" class="form-control" id="nohp" placeholder="Nomor Handphone" required>
        </div>
        <button type="submit" class="btn btn-primary">Tambah Data Contact</button>
      </form>
    </div>
  </div>
</div>